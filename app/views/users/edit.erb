<h2>Edit your account details.</h2>
<form action="/users/<%= @user.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">

    
    <p><label for="name" id="name">Name:</label>
    <input type="text" name="name" value="<%=@user.name%>"></p><br>

    
    <p><label for="email" id="email">Email:</label>
    <input type="text" name="email" value="<%=@user.email%>"></p><br>

    
    <p><label for="password" id="password">Password:</label>
    <input type="password" name="password" value="<%=@user.password%>"></p><br>

    <input type="submit" value="Update">    
</form>

<h2>To remove your account click DELETE.</h2>
<form action="/users/<%= @user.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
</form>
<h3>This action cannot be undone!</h3>
<a href="/users/<%= @user.id%>">Never mind</a>
